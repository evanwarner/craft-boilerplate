{% extends '_layouts/global-vars' %}



{% block html %}
  <!DOCTYPE html>
  <html class="no-js" lang="{{ currentLanguage }}">
    <head prefix="og: http://ogp.me/ns#">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">

      <title>{{ metaTitle }}</title>
      {% if metaDescription %}
        <meta property="og:description" name="description" content="{{ metaDescription }}">
      {% endif %}

      <meta name="referrer" content="{{ metaReferrer }}">

      {% if metaRobots %}
        <meta name="robots" content="{{ metaRobots }}">
      {% endif %}

      {% if canonicalUrl is defined and canonicalUrl %}
        <link rel="canonical" href="{{ canonicalUrl }}">
      {% endif %}

      <meta name="format-detection" content="telephone=no">

      {% if enableSocialSharingMeta %}
        {# TODO: social sharing info #}
        <meta property="og:type" content="website">
        <meta property="og:url" content="{{ canonicalUrl ?? craft.app.request.absoluteUrl }}">
        <meta property="og:site_name" content="{{ siteName }}">
        <meta property="og:title" content="{{ metaTitle }}">
        <meta property="og:locale" content="{{ currentLanguage }}">
        <meta property="og:image" content="">

        <meta name="twitter:card" content="summary">
        <meta name="twitter:image" content="">
        <meta name="twitter:site" content="@">
        <meta name="twitter:creator" content="@">
      {% endif %}

      {# TODO: generate a 32x32 favicon.ico in webroot #}
      <link rel="icon" type="image/svg+xml" href="/favicon.svg">{# TODO: generate SVG favicon #}
      <link rel="apple-touch-icon" sizes="180x180" href="/icon-180.png">{# TODO: generate Web Clip icon #}
      <meta name="msapplication-config" content="/ieconfig.xml">{# TODO: generate Windows Tile icons (and tile color) #}
      <link rel="manifest" href="/manifest.json">{# TODO: generate Android home screen icons (and theme colors) #}
      <meta name="apple-mobile-web-app-title" content="{{ siteName }}">

      <meta name="theme-color" content="#FFF">{# TODO: set theme color #}

      <script type="text/javascript">
        !function(){let h=document.documentElement.classList;h.replace('no-js','js');}();
      </script>

      <script defer src="{{ rev('js/main.js') }}"></script>
      <link rel="stylesheet" href="{{ rev('css/main.css') }}" media="screen">
      {{ head() }}
    </head>

    <body class="{{ bodyClasses | unique | join(' ') }}">
      {{ beginBody() }}
      <a class="SkipLink u-visuallyHidden u-focusable" href="#main-content" title="Jump to the main page content">Skip to content</a>

      <main id="main-content">
        {% block content %}{% endblock %}
      </main>

      {{ endBody() }}
      <link rel="stylesheet" href="{{ rev('css/print.css') }}" media="print">
    </body>
  </html>
{% endblock %}
